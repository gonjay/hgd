
<h1>历史安装包</h1>

<table>
  <tr>
    <th>版本号</th>
    <th>下载地址</th>
    <th>网络类型</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @apks.each do |apk| %>
  <tr>
    <td><%= apk.version %></td>
    <td><a href="http://datescript.u.qiniudn.com/<%= apk.downloadUrl %>">点击下载</a></td>
    <td><%= apk.netType %></td>
    <td><%= link_to '打开', apk %></td>
    <td><%= link_to '编辑', edit_apk_path(apk) %></td>
    <td><%= link_to '删除', apk, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
  <% end %>
</table>

<br />

<%= link_to '创建', new_apk_path, class:"button green" %>
