<div class="uk-container-center uk-container wrapper white">
	<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "uk-form"}) do |f| %>
	<fieldset>
		<legend>登陆</legend>
		<div><%= devise_error_messages! %></div>
		<div class="form-inputs">
			<%= f.input :email, :required => false, :autofocus => true, label_html: { class: 'uk-form-row'}, input_html: { size: 30 }, label: '邮箱<br>'  %>
			<%= f.input :password, :required => false, label_html: { class: 'uk-form-row', name: "邮件" }, input_html: { size: 30 }, label: '密码<br>'  %>
			<div class="uk-form-row">
				<input name="user[remember_me]" type="hidden" value="0">
				<input class="boolean optional" id="user_remember_me" name="user[remember_me]" type="checkbox" value="1">
				<label class="boolean optional" for="user_remember_me">记住我</label>
			</div>
		</div>

		<div class="uk-form-row"  style="margin-top:10px;">
			<%= f.button :submit, "登陆", :class => 'uk-button uk-button-primary' %>
			<%= render "devise/shared/links" %>
		</div>
	</fieldset>
	<% end %>

	
</div>